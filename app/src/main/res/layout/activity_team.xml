<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_gravity="fill_vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:text="Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/TextColor"/>
            <LinearLayout
                android:background="@color/Listdivider"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"/>

            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:text="info.."
                android:textColor="@color/TextColor_sub"/>

            <LinearLayout
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                android:text="Members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/TextColor"/>
                <ImageButton
                    android:layout_marginLeft="200dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/add"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/Listdivider"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
            <include
                android:id="@+id/people1"
                layout="@layout/item_teamlist"/>
            <include
                android:id="@+id/people2"
                layout="@layout/item_teamlist"/>
            <include
                android:id="@+id/people3"
                layout="@layout/item_teamlist"/>
            <include
                android:id="@+id/people4"
                layout="@layout/item_teamlist"/>
            <include
                android:id="@+id/people5"
                layout="@layout/item_teamlist"/>
            <include
                android:id="@+id/people6"
                layout="@layout/item_teamlist"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
            <FrameLayout
                android:id="@+id/container_prog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">
                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>