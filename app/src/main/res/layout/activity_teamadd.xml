<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp">


                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_intro_idea" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="7.5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/team_add_intro_title"
                        android:textColor="@color/mypageColor"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/team_add_intro_hint"
                        android:maxLines="1"
                        android:textColor="@color/mypageColor"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:maxLength="15"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp">


                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_intro_descrip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="7.5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/team_add_detail_title"
                        android:textColor="@color/mypageColor"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/detail"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:hint="설명을 입력하세요"
                        android:textColor="@color/mypageColor"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="관심사"
                android:textSize="18dp"
                android:textColor="@color/mypageColor"
                android:layout_marginLeft="60dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="20dp">
                <Button
                    android:id="@+id/btn_tag_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#스터디"/>
                <Button
                    android:id="@+id/btn_tag_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#토익" />
                <Button
                    android:id="@+id/btn_tag_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#앱개발" />
            </LinearLayout>
            <EditText
                android:id="@+id/edit_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="#직접입력"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="20dp"/>


            <TextView
                android:id="@+id/btn_make_team"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/team_add_btn"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="?attr/colorPrimary"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/btn_remove_team"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/team_remove_btn"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@color/red"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
