<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="2dp"
    android:id="@+id/cardview">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버스킹어플"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/ColorPrimary"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서완규"
            android:textSize="12dp"
            android:textColor="@color/ColorPrimary"
            android:layout_marginBottom="16dp" />
        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="ffdkdkddddfdfkdfdffddkdkfdfkdfdffkdkfdfkdfdffdkdkfdfkdfdffdkdkfdfkdfdffdkdkfdfkdfdffdkdkfdfkdfdffdkdkfdfkdfdffdkdkfdfkdfdffdkdkfdfkdfdffdkdkfdfkdfdffdkdkfdfkdfdffdkdkfdfkdfdf"
            android:textSize="16dp"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"/>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/Listdivider"/>

        <FrameLayout
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pick_icon"
                    android:background="@drawable/ic_check_circle_gray"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:id="@+id/pick"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="chl"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">
                <ImageView
                    android:background="@drawable/ic_introduce"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:id="@+id/team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="6명"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>