<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>

    <style name="drawer" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/ColorPrimary</item>
    </style>
    <style name="appCompatEdittext" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorAccent">@color/TextColor</item>
        <item name="android:cacheColorHint">@color/ColorPrimary</item>
        <item name="android:textColorHint">@color/ColorPrimary</item>

    </style>
</resources>
